<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_trending"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="fill_horizontal"
    android:orientation="vertical"
    android:visibility="visible">

    <android.support.v7.widget.CardView
        android:id="@+id/item_cv_trending"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?selectableItemBackground"
        app:cardCornerRadius="@dimen/material_4"
        app:cardElevation="@dimen/material_2"
        android:layout_margin="@dimen/material_8">


        <RelativeLayout
            android:id="@+id/rl_cardview_trending"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/material_16">

            <ImageView
                android:id="@+id/item_img_trending_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/default_content_description"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_image_black_200dp" />

            <TextView
                android:id="@+id/txt_trending_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_img_trending_pic"
                android:gravity="fill_horizontal"
                android:text="@string/default_text"
                android:textSize="@dimen/txt_size_24"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/material_8"
                android:layout_marginTop="@dimen/material_4"/>

            <TextView
                android:id="@+id/txt_trending_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_trending_title"
                android:gravity="fill_horizontal"
                android:text="@string/default_text"
                android:textSize="@dimen/txt_size_16" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>