<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_report"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_report_height"
    android:gravity="fill_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/item_cv_contact"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?android:selectableItemBackground">

    <RelativeLayout
        android:id="@+id/rl_cardview_contact"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/material_16">

        <ImageView
            android:id="@+id/img_agency_pic"
            android:layout_width="@dimen/img_contact_pic_width"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/report_img_content_description"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_image_black_24dp" />

        <TextView
            android:id="@+id/txt_agency_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/material_8"
            android:layout_marginStart="@dimen/material_8"
            android:layout_marginTop="@dimen/material_24"
            android:layout_toEndOf="@id/img_agency_pic"
            android:gravity="fill_horizontal"
            android:text="@string/agency_name_placeholder"
            android:textSize="@dimen/txt_size_18" />

        <TextView
            android:id="@+id/txt_agency_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/material_8"
            android:layout_marginStart="@dimen/material_8"
            android:layout_toStartOf="@id/img_phone_icon"
            android:layout_toEndOf="@id/img_agency_pic"
            android:layout_marginTop="@dimen/material_8"
            android:layout_below="@id/txt_agency_name"
            android:gravity="fill_horizontal"
            android:text="@string/agency_details_placeholder"
            android:textSize="@dimen/txt_size_14"/>

        <ImageView
            android:id="@+id/img_phone_icon"
            android:layout_width="@dimen/material_48"
            android:layout_height="@dimen/material_48"
            android:layout_toStartOf="@+id/img_message_icon"
            android:layout_marginEnd="@dimen/material_16"
            android:layout_below="@id/txt_agency_name"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/material_8"
            app:srcCompat="@drawable/ic_phone_black_24dp"
            android:contentDescription="@string/default_content_description"
            android:tint="@color/colorPrimaryDark"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/img_message_icon"
            android:layout_width="@dimen/material_48"
            android:layout_height="@dimen/material_48"
            android:layout_below="@id/txt_agency_name"
            android:layout_alignBaseline="@id/img_phone_icon"
            android:layout_marginTop="@dimen/material_8"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_message_black_24dp"
            android:contentDescription="@string/default_content_description"
            android:tint="@color/colorPrimaryDark"
            android:clickable="true"
            android:focusable="true"/>

    </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>